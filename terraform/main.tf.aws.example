# Alternative AWS configuration
# To use AWS, rename this file to main.tf and update variables.tf

terraform {
  required_version = ">= 1.9"
  
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.region
}

# Get latest Ubuntu 22.04 LTS AMI
data "aws_ami" "ubuntu" {
  most_recent = true
  owners      = ["099720109477"] # Canonical

  filter {
    name   = "name"
    values = ["ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
}

# Create VPC
resource "aws_vpc" "lab04_vpc" {
  cidr_block           = "10.0.0.0/16"
  enable_dns_hostnames = true
  enable_dns_support   = true

  tags = {
    Name    = "${var.project_name}-vpc"
    Project = var.project_name
    Lab     = "lab04"
  }
}

# Create Internet Gateway
resource "aws_internet_gateway" "lab04_igw" {
  vpc_id = aws_vpc.lab04_vpc.id

  tags = {
    Name = "${var.project_name}-igw"
  }
}

# Create Subnet
resource "aws_subnet" "lab04_subnet" {
  vpc_id                  = aws_vpc.lab04_vpc.id
  cidr_block              = var.subnet_cidr
  availability_zone       = var.availability_zone
  map_public_ip_on_launch = true

  tags = {
    Name = "${var.project_name}-subnet"
  }
}

# Create Route Table
resource "aws_route_table" "lab04_rt" {
  vpc_id = aws_vpc.lab04_vpc.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.lab04_igw.id
  }

  tags = {
    Name = "${var.project_name}-rt"
  }
}

# Associate Route Table with Subnet
resource "aws_route_table_association" "lab04_rta" {
  subnet_id      = aws_subnet.lab04_subnet.id
  route_table_id = aws_route_table.lab04_rt.id
}

# Create Security Group
resource "aws_security_group" "lab04_sg" {
  name        = "${var.project_name}-sg"
  description = "Security group for Lab 4 VM"
  vpc_id      = aws_vpc.lab04_vpc.id

  ingress {
    description = "SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = [var.ssh_allowed_cidr]
  }

  ingress {
    description = "HTTP"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    description = "Custom port 5000"
    from_port   = 5000
    to_port     = 5000
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    description = "Allow all outbound traffic"
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "${var.project_name}-sg"
  }
}

# Create Key Pair (if using existing key)
data "aws_key_pair" "existing" {
  key_name = var.aws_key_pair_name
}

# Create EC2 Instance
resource "aws_instance" "lab04_vm" {
  ami                    = data.aws_ami.ubuntu.id
  instance_type          = "t2.micro"  # Free tier
  key_name               = data.aws_key_pair.existing.key_name
  vpc_security_group_ids = [aws_security_group.lab04_sg.id]
  subnet_id              = aws_subnet.lab04_subnet.id

  root_block_device {
    volume_size = 8  # GB (free tier: 30 GB total)
    volume_type = "gp3"
  }

  tags = {
    Name    = "${var.project_name}-vm"
    Project = var.project_name
    Lab     = "lab04"
    Managed = "terraform"
  }
}

